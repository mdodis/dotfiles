#!/bin/bash

# pamixer to get: muted (display different speaker emoji),
# and current sound volume
function sound_status {
    VOL=$(pamixer --get-volume)
    MUTED=$(pamixer --get-mute)
    case $MUTED in
        "true" )  echo -n ğŸ”‡;;
        "false")  echo -n ğŸ”Š;;
    esac

    echo -n " $VOL%"
}

# get current assigned ip address in LAN network
function getip {
    echo -n $(ip route | grep default | sed 1q | awk '{print $3}')
}

# get current layout (hardcoded)
function getlayout {
    case "$(xset -q|grep LED| awk '{ print $10 }')" in
      "00000000") KBD="US" ;;
      "00000001") KBD="^US" ;;
      "00001000") KBD="GR" ;;
      "00001001") KBD="^GR" ;;
      *) KBD="unknown" ;;
    esac
    echo -n $KBD
}

# /proc/status narrowed down to cpu usage
function cpuavg {
    printf "%.2f\n" $(grep 'cpu ' /proc/stat | awk '{usage=($2+$4)*100/($2+$4+$5)} END {print usage}')
}

function minikubestat {
    if [[ ! -z "$(command -v minikube)" ]]; then
        mstatus=$(minikube status | grep host)
        if [[ $mstatus == *"Running"* ]]; then
            echo kube
        fi
    fi
}

function bright {
    xbacklight -get | xargs printf "%.0f"
}

function bat {
    echo -n $(acpi -b | sed 1q | awk '{print $4}' | tr -d ",")
}
while true; do
    xsetroot -name "$(minikubestat) CPU: $(cpuavg)%  ğŸŒ $(getip) ğŸ–® $(getlayout) $(sound_status) | $(bat) | ğŸ“† $(date "+%d/%m/%y ğŸ•’ %H:%M") ğŸ’» $(bright)"
    sleep 1s
done
